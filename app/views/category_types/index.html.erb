
<h1>Categorias</h1>

<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Categoria</th>
      </tr>
    </thead>

    <tbody>
      <% @category_types.each do |category_type| %>
        <tr>
          <td><%= link_to category_type.name , category_type%></td>
          <td><%= category_type.category.name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<%= link_to "Nova Categoria",  new_category_type_path, class: 'btn btn-default btn-sm' %>
