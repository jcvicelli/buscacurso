<%= form_for(@course) do |f| %>
  <%= render "courses/shared/error_messages" %>

  <div class="form-group">
    <%= f.label :Título %><br>
    <%= f.text_field :title , class: 'form-control'%>
  </div>
  <div class="form-group">
    <%= f.label :Descrição %><br>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :Sobre %><br>
    <%= f.text_area :about, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :Local %><br>
    <%= f.text_field :place, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :Empresa %><br>
    <%= f.collection_select :company_id, Company.all, :id, :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :Avaliação %><br>
    <%= f.text_field :rating , class: 'form-control'%>
  </div>
  <div class="form-group">
    <%= f.label :Início %><br>
    <%= f.datetime_select :begins_at , class: 'form-control'%>
  </div>
  <div class="form-group">
    <%= f.label :Fim %><br>
    <%= f.datetime_select :ends_at , class: 'form-control'%>
  </div>
  <br>
  <%= f.submit "Salvar", class: 'btn btn-primary' %>
<% end %>
