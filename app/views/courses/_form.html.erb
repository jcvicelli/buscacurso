<%= simple_form_for(@course) do |f| %>

  <div class="form-group">
    <%= f.input :title , class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :Descrição %><br>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :Sobre %><br>
    <%= f.text_area :about, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :Local %><br>
    <%= f.text_field :place, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.association :company , class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :Avaliação %><br>
    <%= f.text_field :rating , class: 'form-control'%>
  </div>
  <div class="form-group">
    <%= f.input :begins_at , class: 'form-control'%>
  </div>
  <div class="form-group">
    <%= f.input :ends_at , class: 'form-control'%>
  </div>
  <br>
  <%= f.submit "Salvar", class: 'btn btn-primary' %>
<% end %>
