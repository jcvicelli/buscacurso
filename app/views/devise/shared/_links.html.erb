<hr>
<div class="btn-group-vertical">

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Esqueceu a senha?", new_password_path(resource_name), class: 'btn btn-sm btn-link' %>
  <% end -%>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Não recebeu email de confirmacão?", new_confirmation_path(resource_name), class: 'btn btn-sm btn-link' %>
  <% end -%>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Não recebeu email de desbloqueio?", new_unlock_path(resource_name), class: 'btn btn-sm btn-link' %>
  <% end -%>

</div>
