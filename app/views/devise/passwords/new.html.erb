<div class="login-bg">
  <div class="container">
    <div class="row">
  		  <div class="col-md-4 col-md-offset-4">

        <div class="log-in panel">
          <div class="panel-heading">
            <h2> Esqueceu a Senha? </h2>
          </div>
          <div class="panel-body">

            <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name),
                                            html: { method: :post }) do |f| %>
              <%= render "shared/error_messages" %>

              <div class="form-group">
                <%= f.input :email, class: 'form-control' %>
              </div>

              <%= f.submit "Enviar email para mudar senha", class: 'btn btn-primary form-control' %>
            <% end %>

            <%= render "devise/shared/links" %>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
