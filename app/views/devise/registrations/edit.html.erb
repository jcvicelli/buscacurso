<div class="login-bg">
  <div class="container">
    <div class="row">
  		  <div class="col-md-4 col-md-offset-4">

        <div class="log-in panel">
          <div class="panel-heading">
            <h2> Minha Conta </h2>
          </div>
          <div class="panel-body">
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%= render "shared/error_messages" %>

              <div class="form-group">
                <%= f.input :name, class: 'form-control' %>
              </div>

              <div class="form-group">
                <%= f.input :email, class: 'form-control' %>
                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <span class="label label-info">Aguardando confirmacao para: <%= resource.unconfirmed_email %></span>
                <% end %>
              </div>

              <div class="form-group simple_form">
                <%= f.label :company, class: 'select optional control-label' %>
                <%= f.collection_select :company_id, Company.all, :id, :name,
                                {prompt: "Selecione um Parceiro"},  { class: 'select optional form-control'} %>
              </div>

              <% if f.object.encrypted_password.present? %>
                <div class="form-group">
                  <%= f.input :password, autocomplete: "off", class: 'form-control' %>
                  <span class="help-block">deixe em branco se nao quiser mudar</span>
                </div>

                <div class="form-group">
                  <%= f.input :password_confirmation, class: 'form-control' %>
                </div>

                <div class="form-group">
                  <%= f.input :current_password, class: 'form-control' %>
                  <span class="help-block">digite a senha atual para alterar dados</span>
                </div>
              <% end %>

              <%= f.submit "Atualizar", class: 'btn btn-primary form-control' %>
            <% end %>

            <p>
              <%= button_to "Cancelar minha conta", registration_path(resource_name), class: 'btn btn-danger form-control',
                            data: { confirm: "Tem certeza?" }, method: :delete %>
            </p>

            <%= link_to "Voltar", :back, class: 'btn btn-link btn-sm form-control' %>

          </div>

        </div>
      </div>
    </div>
  </div>
</div>
