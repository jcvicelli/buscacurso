<div class="login-bg">
  <div class="container">
    <div class="row">
  		  <div class="col-md-4 col-md-offset-4">

        <div class="log-in panel">
          <div class="panel-heading">
            <h2> Novo Usuário </h2>
          </div>
          <div class="panel-body">
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "shared/error_messages" %>
              <%= render "devise/shared/social" %>

              <div class="form-group">
                <%= f.input :name, class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.input :email, class: 'form-control' %>
              </div>
              <% if f.object.password_required? %>
                <div class="form-group">
                  <%= f.input :password, class: 'form-control' %>
                  <% if @validatable %>
                    <span class="help-block">Mínimo <%= @minimum_password_length %> caracteres.</span>
                  <% end %>
                </div>
                <div class="form-group">
                  <%= f.input :password_confirmation, class: 'form-control' %>
                </div>
              <% end %>

              <%= f.submit "Criar", class: 'btn btn-primary form-control' %>


            <% end %>

            <%= render "devise/shared/links" %>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
