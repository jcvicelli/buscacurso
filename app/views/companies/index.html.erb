<div class="form panel">
  <div class="row">
    <div class= "col-md-6 col-md-offset-3">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Nome</th>
              <th>Cnpj</th>
              <th>Fone</th>
              <th>Contato</th>
            </tr>
          </thead>

          <tbody>
            <% @companies.each do |company| %>
              <tr>
                <td><%= link_to company.name , company%></td>
                <td><%= company.cnpj %></td>
                <td><%= company.phone %></td>
                <td><%= company.contact %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= link_to "Novo Parceiro",  new_company_path, class: 'btn btn-primary btn-md' %>
      </div>
    </div>
  </div>
</div>
