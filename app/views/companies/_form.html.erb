<%= form_for(@company) do |f| %>
  <%= render "companies/shared/error_messages" %>

  <div class="form-group">
    <%= f.label :cnpj %><br>
    <%= f.text_field :cnpj , class: 'form-control'%>
  </div>
  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :phone %><br>
    <%= f.text_field :phone, class: 'form-control'%>
  </div>
  <div class="form-group">
    <%= f.label :contact %><br>
    <%= f.text_field :contact, class: 'form-control'%>
  </div>

  <h3>Endereços: </h3><br>
  <div class="enderecos">
    <%= f.fields_for :enderecos do |e| %>
      <%= render 'endereco_fields', f: e %>
    <% end %>
    <%= link_to_add_association "Adicionar Endereço", f, :enderecos, class: "btn btn-default" %>
  </div>

  <br>
  <%= f.submit "Salvar", class: 'btn btn-primary' %>

<% end %>
